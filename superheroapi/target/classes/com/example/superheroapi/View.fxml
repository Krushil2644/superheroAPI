<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.superheroapi.Controller">
    <VBox alignment="CENTER" spacing="10" styleClass="root">
    <TextField fx:id="searchField" promptText="Enter superhero name"/>
    <Button text="Get Superhero Info" onAction="#handleSearch"/>
    <ListView fx:id="resultList" onMouseClicked="#handleItemClick"/>
    <VBox fx:id="detailBox" visible="false">
        <Label fx:id="nameLabel" />
        <Label fx:id="fullNameLabel" />
        <Label fx:id="placeOfBirthLabel" />
        <Label fx:id="publisherLabel" />
        <ImageView fx:id="heroImageView" />
        <Button fx:id="backButton" text="Back" onAction="#handleBackButton" />
    </VBox>
    </VBox>


</VBox>
